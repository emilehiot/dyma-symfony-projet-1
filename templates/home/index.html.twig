{% extends 'base.html.twig' %}

{% block title %}Wonder{% endblock %}

{% block body %}
    <ul>
        {% for question in questions %}
            <li class="block d-flex flex-row mb-20">
                <div></div>
                <div class="flex-fill d-flex flex-column">
                    <div class="mb-20 question-content">
                        <h3 class="mb-20">{{ question.title }}</h3>
                        <p>{{ question.content }}</p>
                    </div>
// 12 minutes 03 secondes
                    <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                            <img class="mr-10 question-avatar" src="{{ question.author.avatar }}" alt="photo de profil de l'auteur de la question">
                            <p>{{ question.author.name }}</p>
                        </div>

                        <div class="d-flex flex-row align-items-center">
                            <i class="far fa-comment mr-10"></i>
                            <p>{{ question.nbrOfResponse }}</p>
                        </div>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
